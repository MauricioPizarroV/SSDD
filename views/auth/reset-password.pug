                        input#password.mt-2.mb-1.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nuevo Password" type="password" name="password") 
                        
                        
                        
                    input(class="w-full bg-indigo-600 hover:bg-green-700 text-white font-bold py-3 cursor-pointer" type= "submit" value="Guardar Password")
                    