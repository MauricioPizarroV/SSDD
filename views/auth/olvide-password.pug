extends ../layout/index 

block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.color SSDD|
            span.font-normal Control e Inventario
        h2.text-center.text-2xl.font-extrabold= pagina
        
        if errores 
             div(class="max-w-md mx-auto my-7")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.font-bold= error.msg
        .mt-4.mx-auto.max-w-md
            .bg-white.py-8.px-3.shadow
                form.space-y-5(method="POST" action="/auth/olvide-password" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-600.font-bold(for="email") Email de Registro
                        input#email.mt-2.mb-4.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email") 
                    div.flex.items-center.justify-between.mb-4
                        a.text-gray-500.text-s(href="/auth/login") ¿Ya tienes una cuenta? Inicia Sesión
                        a.text-gray-500.text-s(href="/auth/olvide-password") Olvide mi password
                        
                        
                    input(class="w-full bg-indigo-600 hover:bg-green-700 text-white font-bold py-3 cursor-pointer" type= "submit" value="Enviar Instrucciones")
                    