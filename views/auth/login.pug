extends ../layout/index 

block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.color SSDD|
            span.font-normal Control e Inventario
        h2.text-center.text-2xl.font-extrabold= pagina


        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg 
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.pace-y-5(method="POST" action="/auth/login")
                        input(type="hidden" name="_csrf" value= csrfToken)
                        div
                            label.block.text-sm.uppercase.text-gray-600.font-bold Email de Registro
                            input#email.mt-2.mb-2.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
                            placeholder="Tu email" type="email" name="email")
                        div
                        label.block.text-sm.uppercase.text-gray-600.font-bold Password
                        input#password.mt-2.mb-4.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
                            placeholder="Ingrese su contraseña" type="password" name="password")
                        
                        input(class="w-full bg-indigo-600 hover:bg-green-700 text-white font-bold py-3 cursor-pointer" type= "submit" value="Inicar Sesión")