extend ../layout/index 

block contenido 
        .py-10
                h1.text-4xl.my-3.font-extrabold.text-center.color SSDD|
                        span.font-normal Control e Inventario
                h2.text-center.text-2xl.font-extrabold= pagina

                if errores 
                        div(class="max-w-md mx-auto my-10")
                                each error in errores
                                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg 

                .mt-8.mx-auto.max-w-md
                        .bg-white.py-8.px-4.shadow
                                form.space-y-5(method="POST" action= "/auth/registro" noValidate)
                                        input(type="hidden" name="_csrf" value=csrfToken)
                                        div
                                                label.block.text-sm.uppercase.text-gray-600.font-bold Tu nombre
                                                input#nombre.mt-2.mb-2.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
                                                placeholder="Nombre Completo" type="text" name="nombre" value= usuario ?  usuario.nombre: '')

                                        div
                                                label.block.text-sm.uppercase.text-gray-600.font-bold Email de Registro
                                                input#email.mt-2.mb-2.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
                                                placeholder="Ingrese su email" type="text" name="email" value = usuario ?  usuario.email: '')

                                        div
                                                label.block.text-sm.uppercase.text-gray-600.font-bold Password
                                                input#password.mt-2.mb-2.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
                                                placeholder="Ingrese su contraseña" type="password" name="password")

                                        div
                                                label.block.text-sm.uppercase.text-gray-600.font-bold(for="repetir_password") Repetir Password
                                                
                                                input#repetir_password.mt-2.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400.mb-4(
                                                placeholder="Repita la contraseña" type="password" name="repetir_password")

                                        div.flex.items-center.justify-between.mb-4
                                                a.text-gray-500.text-s(href="/auth/login") ¿Ya tienes una cuenta? Inicia Sesión
                                                a.text-gray-500.text-s(href="/auth/olvide-password") Olvide mi password
                                
                                        input(class="w-full bg-indigo-600 hover:bg-green-700 text-white font-bold py-3 cursor-pointer" type= "submit" value="Crear cuenta")